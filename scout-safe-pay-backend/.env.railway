# ================================================
# RAILWAY ENVIRONMENT VARIABLES
# ================================================
# Copy these to Railway Dashboard: Variables tab
# ================================================

# Application
APP_NAME="AutoScout24 SafeTrade"
APP_ENV=production
APP_KEY=base64:AWs0dTYjNtTmoDlPy+mt8joPQfJcabdGuJeCwAMsB4o=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=${PUBLIC_URL}

# Locale
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Database - Railway MySQL
# Railway setează automat DATABASE_URL
# Dar trebuie să extragi valorile:
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
DB_DATABASE=${MYSQLDATABASE}
DB_USERNAME=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_DOMAIN=
CACHE_DRIVER=database
CACHE_PREFIX=autoscout

# Queue
QUEUE_CONNECTION=database

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Mail
MAIL_MAILER=log
MAIL_FROM_ADDRESS=noreply@autoscout24.com
MAIL_FROM_NAME="${APP_NAME}"

# Frontend CORS - UPDATE AFTER VERCEL DEPLOYMENT
FRONTEND_URL=https://your-vercel-app.vercel.app
SANCTUM_STATEFUL_DOMAINS=your-vercel-app.vercel.app
SESSION_DOMAIN=

# Security
BCRYPT_ROUNDS=12

# Filesystem
FILESYSTEM_DISK=public

# Broadcasting
BROADCAST_DRIVER=log

# Filament
FILAMENT_PATH=admin

# Disable problematic features for Railway
VAPOR_SSR_ENABLED=false
